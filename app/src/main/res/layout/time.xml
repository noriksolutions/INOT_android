<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:gravity="center">


    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/sot"
        android:background="@drawable/seton"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set ON Time"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="gravity"
        android:layout_below="@+id/ontime"
        android:layout_alignLeft="@+id/sot"
        android:layout_alignStart="@+id/sot" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/soft"
        android:background="@drawable/setoff"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/sot"
        android:layout_alignStart="@+id/sot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set OFF Time"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/sot"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/soet"
        android:layout_alignBottom="@+id/sot"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sofet"
        android:layout_alignBottom="@+id/soft"
        android:layout_alignLeft="@+id/soet"
        android:layout_alignStart="@+id/soet"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/send"
        android:gravity="center"
        android:background="@drawable/send"
        android:layout_below="@+id/soft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ontime"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/soet"
        android:layout_alignEnd="@+id/soet"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/offtime"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:visibility="gone" />
</RelativeLayout>
